  <gazebo reference="torso">
    <material>Gazebo/Gray</material>
    <mu1>0.8</mu1>
    <mu2>0.8</mu2>
    <kp>1000000.0</kp>
    <kd>1000000.0</kd>
    <self_collide>false</self_collide>
  </gazebo>

